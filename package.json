{
  "name": "xiaowu-blog",
  "version": "1.0.0",
  "description": "小屋博客系统 - 综合型个人博客和内容管理平台",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.vue,.php",
    "lint:fix": "eslint . --ext .js,.vue --fix && prettier --write .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "prepare": "husky install",
    "commitizen": "cz"
  },
  "keywords": [
    "blog",
    "cms",
    "wordpress",
    "gallery",
    "ai",
    "comments"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.3",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "@eslint/js": "^8.45.0",
    "eslint-plugin-vue": "^9.14.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "vite": "^4.4.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "vitest": "^0.34.2",
    "@vitest/ui": "^0.34.2",
    "php-parser": "^3.1.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix",
    "*.{js,vue,css,html,md}": "prettier --write"
  }
}
