# WordPress配置
WP_URL=http://localhost
WP_API_URL=http://localhost/wp-json
WP_ADMIN_URL=http://localhost/wp-admin

# 数据库配置
DB_NAME=xiaowu_blog
DB_USER=xiaowu_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_CHARSET=utf8mb4

# AI服务配置
AI_PROVIDER=openai
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# 图像生成配置
IMG_GEN_PROVIDER=dall-e
IMG_GEN_API_KEY=your_image_gen_key_here

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CDN配置
CDN_PROVIDER=tencent
CDN_SECRET_ID=your_secret_id
CDN_SECRET_KEY=your_secret_key
CDN_BUCKET=xiaowu-blog
CDN_REGION=ap-shanghai

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=小伍同学博客

# Nginx配置
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_SSL_PORT=443

# 调试配置
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false
