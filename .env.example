# ============================================
# 应用配置
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_NAME="Xiaowu Blog"

# ============================================
# WordPress 配置
# ============================================
WP_HOME=https://yourdomain.com
WP_SITEURL=https://yourdomain.com
WP_URL=https://yourdomain.com
WP_API_URL=https://yourdomain.com/wp-json
WP_ADMIN_URL=https://yourdomain.com/wp-admin

# WordPress 数据库
DB_NAME=xiaowu_blog
DB_USER=wordpress
DB_PASSWORD=change_me_very_secure_password
DB_HOST=mysql
DB_PORT=3306
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# WordPress 安全密钥 (从 https://api.wordpress.org/secret-key/1.1/salt/ 获取)
AUTH_KEY=put_your_unique_phrase_here
SECURE_AUTH_KEY=put_your_unique_phrase_here
LOGGED_IN_KEY=put_your_unique_phrase_here
NONCE_KEY=put_your_unique_phrase_here
AUTH_SALT=put_your_unique_phrase_here
SECURE_AUTH_SALT=put_your_unique_phrase_here
LOGGED_IN_SALT=put_your_unique_phrase_here
NONCE_SALT=put_your_unique_phrase_here

# WordPress 用户
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=change_me_very_secure_password
WP_ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# CORS 配置
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ============================================
# 速率限制配置
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PUBLIC_REQUESTS=100
RATE_LIMIT_PUBLIC_WINDOW=60
RATE_LIMIT_AUTH_REQUESTS=1000
RATE_LIMIT_AUTH_WINDOW=60
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=60

# ============================================
# Redis 缓存配置
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password
REDIS_DB=0

# ============================================
# Nginx 配置
# ============================================
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_HTTPS_PORT=443
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=2048

# ============================================
# PHP-FPM 配置
# ============================================
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_VARS=5000
PHP_MEMORY_LIMIT=512M
PHP_POST_MAX_SIZE=100M
PHP_UPLOAD_MAX_FILESIZE=100M

# ============================================
# MySQL 配置
# ============================================
MYSQL_ROOT_PASSWORD=change_me_mysql_root_password
MYSQL_DATABASE=xiaowu_blog
MYSQL_USER=wordpress
MYSQL_PASSWORD=change_me_very_secure_password
MYSQL_PORT=3306
MYSQL_MAX_CONNECTIONS=1000
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=error
LOG_CHANNEL=stack
WP_DEBUG=false
WP_DEBUG_LOG=false

# ============================================
# 邮件配置
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Xiaowu Blog"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=小伍同学博客

# ============================================
# AI 服务配置
# ============================================
AI_PROVIDER=openai
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# ============================================
# 图像生成配置
# ============================================
IMG_GEN_PROVIDER=dall-e
IMG_GEN_API_KEY=your_image_gen_key_here

# ============================================
# CDN 配置
# ============================================
CDN_ENABLED=false
CDN_PROVIDER=tencent
CDN_URL=https://cdn.yourdomain.com
CDN_BUCKET=your-bucket-name
CDN_REGION=us-east-1
CDN_SECRET_ID=your_secret_id
CDN_SECRET_KEY=your_secret_key
CDN_KEY=your_cdn_key
CDN_SECRET=your_cdn_secret

# ============================================
# SSL 证书 (可选)
# ============================================
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# ============================================
# 监控和分析
# ============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
MONITOR_ENABLED=false

# ============================================
# Vue 管理面板配置
# ============================================
VITE_API_URL=https://yourdomain.com/wp-json
VITE_APP_TITLE="Xiaowu Blog Admin"
VITE_PRODUCTION=true

# ============================================
# 调试配置
# ============================================
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false
